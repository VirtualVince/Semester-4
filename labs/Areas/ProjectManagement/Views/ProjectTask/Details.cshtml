@model labs.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewData["Title"] = "Task Details";
}

<h2>@Model.Title</h2>

<p><strong>Description:</strong> @Model.Description</p>

<a asp-action="Edit" asp-route-id="@Model.ProjectTaskId" class="btn btn-primary">Edit</a>
<a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back to Tasks</a>